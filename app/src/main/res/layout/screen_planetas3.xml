<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_star_background"
    android:fillViewport="true"
    tools:context=".homeplanetas.FragmentPlanet2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="?attr/actionBarSize"
        tools:context=".homeplanetas.HomePlanetas">

        <RelativeLayout
            android:id="@+id/animmation_curiosity"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation1"
                android:layout_width="200dp"
                android:layout_height="240dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="-20dp"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="astronaut_curiosity.json"
                app:lottie_loop="true"
                app:lottie_speed="1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/cabecalho_curiosidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/background_text_splash"
            android:padding="10dp"
            android:text="VocÃª Sabia ????"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animmation_curiosity" />

        <TextView
            android:id="@+id/titulo_curiosidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:padding="5dp"
            android:text="Qual o Planeta mais quente do Sistema Solar?"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cabecalho_curiosidades" />

        <ImageView
            android:id="@+id/sistema_solar"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_background_fav"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/planeta_venus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo_curiosidade" />

        <TextView
            android:id="@+id/descricao_sistema_solar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:padding="5dp"
            android:text="@string/venus_curiosidade"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sistema_solar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
