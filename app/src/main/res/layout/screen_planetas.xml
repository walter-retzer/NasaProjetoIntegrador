<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".splashscreen.SplashActivity">

    <ImageView
        android:id="@+id/imagem_planeta1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="65dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/planet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPlaneta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Mercurio"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagem_planeta1"
        app:layout_constraintStart_toEndOf="@+id/imagem_planeta1"
        app:layout_constraintTop_toTopOf="@+id/imagem_planeta1" />

    <ImageView
        android:id="@+id/imagem_planeta2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="65dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/saturns"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagem_planeta1" />

    <TextView
        android:id="@+id/textPlaneta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="VÃªnus"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagem_planeta2"
        app:layout_constraintStart_toEndOf="@+id/imagem_planeta2"
        app:layout_constraintTop_toTopOf="@+id/imagem_planeta2" />

</androidx.constraintlayout.widget.ConstraintLayout>
